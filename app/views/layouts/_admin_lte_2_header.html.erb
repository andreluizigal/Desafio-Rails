<!-- Main Header -->
<header class="main-header">

  <!-- Logo -->
  <a href="/" class="logo">
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg">Biblioteca</span>
  </a>

  <!-- Header Navbar -->
  <nav class="navbar navbar-static-top" role="navigation">
    <!-- Sidebar toggle button-->
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    <!-- Navbar Right Menu -->
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
      <% if librarian_signed_in? %>
        <!-- User Account Menu -->
        <li class="dropdown user user-menu">
          <!-- Menu Toggle Button -->
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <!-- hidden-xs hides the username on small devices so only the image appears. -->
            <span class="hidden-xs"><%= current_librarian.email %></span>
          </a>
        </li>
        <li>
          <a href="#" data-toggle="control-sidebar"><i class="fa fa-sign-out"></i></a>
        </li>
        <li>
        <%= link_to('Logout', destroy_librarian_session_path, method: :delete) %>        
        </li>
        <% else %>
        <li>
        <%= link_to('Login', new_librarian_session_path) %>  
        </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
